print("There are 8 words! Can you find them?")
total_right = 0
while total_right < 9:
    answer = input("Tell me a word you found!")
    if answer == "igloo":
        print("Good Job!")
        total_right = total_right + 1
    elif answer == "snow":
        print("Amazing!")
        total_right = total_right + 1
    elif answer == "scarf":
        print("Wow!")
        total_right = total_right + 1
    elif answer == "cold":
        print("You're a pro!")
        total_right = total_right + 1
    elif answer == "ice":
        print("Good Job!")
        total_right = total_right + 1
    elif answer == "snow":
        print("Amazing!")
        total_right = total_right + 1
    elif answer == "winter":
        print("Wow!")
        total_right = total_right + 1
    elif answer == "frost":
        print("You're a pro!")
        total_right = total_right + 1
    elif total_right == 4:
        print("You're halfway through!")
    elif total_right == 7:
        print("Only one more!")
    else:
        print("Keep on trying!" or "Let's try that again!")
